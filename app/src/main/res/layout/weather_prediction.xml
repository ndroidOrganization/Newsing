<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data class =".WeatherPredBinding">
    </data>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="4dp"
    app:cardUseCompatPadding="true"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天气预报"
        android:textSize="22sp"
        android:layout_marginLeft="6dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weather_item_height"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/prediction_day_1"
            style="@style/day7_day"
            />
        <TextView
            android:id="@+id/prediction_weather_1"
            style="@style/day7_weather"
            />
        <TextView
            android:id="@+id/prediction_tempura_1"
            style="@style/day7_temp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weather_item_height"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/prediction_day_2"
