        <TextView
            android:id="@+id/prediction_tempura_2"
            style="@style/day7_temp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weather_item_height"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/prediction_day_3"
            style="@style/day7_day"
            />
        <TextView
            android:id="@+id/prediction_weather_3"
            style="@style/day7_weather"
            />
        <TextView
            android:id="@+id/prediction_tempura_3"
            style="@style/day7_temp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weather_item_height"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/prediction_day_4"
